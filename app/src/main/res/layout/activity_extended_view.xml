<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.VistaExtendiad">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginTop="128dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgVehExt"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_baseline_directions_car_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/matriculaExt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5555 AAA"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Marca: "
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/marcaExt"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="MAZDA"
                android:textAlignment="textStart"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Precio por hora: "
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/precioExt"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="15.5"
                android:textAlignment="textStart"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Descipcion: "
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/descripExt"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="descripcion"
                android:textAlignment="textStart"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Color: "
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/colorExt"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Azul"
                android:textAlignment="textStart"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bateria: "
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/bateriaExt"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="15W"
                android:textAlignment="textStart"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fecha adquisicion: "
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/fechaExt"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="15/52/2022"
                android:textAlignment="textStart"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="10dp"
