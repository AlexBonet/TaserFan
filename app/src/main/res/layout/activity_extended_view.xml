                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/cilindradaExt"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="300"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linExtRuedasP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView43"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Numero de ruedas:"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/ruedasExtP"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="10"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineaExtTamP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView44"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tamaño ruedas:"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/tamanoExtP"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="TextView"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linExtBici"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tipo de bici:"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/biciExt"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="montaña"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_edit_24" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />
</androidx.constraintlayout.widget.ConstraintLayout>